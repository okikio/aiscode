---
import AuthLayout from '~/layouts/Auth.astro';

const csrfToken = 'your-csrf-token'; // Replace with actual token fetching logic if needed
const forgotPasswordRoute = '/api/forgot-password'; // Replace with actual route
---
<AuthLayout title="Forgot Password">
  <div class="login-sec">
    <div class="col-lg-5 col-11 m-auto">
      <div class="login-from">
        <div class="form-header">
          <h2 class="f-15 text-uppercase text-white text-center mb-0 fw-bold montserrat-font">Forgot Password?</h2>
        </div>
        <form action={forgotPasswordRoute} method="post" id="forgotForm" class="mt-lg-4 mt-3" name="forgotForm">
          <input type="hidden" name="_csrf" value={csrfToken} />
          <div class="mb-3 form-group">
            <input type="email" class="form-control" id="email" placeholder="Enter your email address" name="email" required />
          </div>
          <div class="mb-4 text-center">
            <button class="gaming-btn btn btn-primary" type="submit">
              <span class="btn">Submit</span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AuthLayout>
