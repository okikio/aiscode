{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "jsxImportSource": "solid-js",
    "paths": {
      "~/*": ["./src/*"]
    },
    "baseUrl": ".",
  },
  "exclude": [
    "../database/**/*",
    "../app/**/*",
    "../public/**/*",
    "../routes/**/*",
    "../tests/**/*",
    "../config/**/*",
    "../bootstrap/**/*",
    "../vendor/**/*",
    "../resources/**/*",
    "../node_modules/**/*"
  ]
}